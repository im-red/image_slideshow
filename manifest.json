{
    "manifest_version": 3,
    "name": "Image Slideshow",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Start Slideshow",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "permissions": [
        "downloads",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_page": "options/options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "file:///*"
            ],
            "js": [
                "enhanceConsole.js",
                "content-scripts/config.js",
                "content-scripts/common.js",
                "content-scripts/watcher.js",
                "content-scripts/scale.js",
                "content-scripts/thumb.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "enhanceConsole.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}